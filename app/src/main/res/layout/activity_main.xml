<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome do Professor -->
        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Nome"
            android:inputType="text" />

        <!-- Matrícula do Professor -->
        <EditText
            android:id="@+id/edtMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Matrícula"
            android:inputType="text" />

        <!-- Idade do Professor -->
        <EditText
            android:id="@+id/edtIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Idade"
            android:inputType="number" />

        <!-- Seletor de tipo de professor -->
        <RadioButton
            android:id="@+id/rbTitular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor Titular"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbHorista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor Horista" />

        <!-- Campos para Professor Titular -->
        <EditText
            android:id="@+id/edtAnosInstituicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Anos de Instituição (Titular)"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtSalarioBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Salário Base (Titular)"
            android:inputType="numberDecimal" />


        <!-- Campos para Professor Horista -->
        <EditText
            android:id="@+id/edtHorasAula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Horas Aula (Horista)"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtValorHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Valor por Hora (Horista)"
            android:inputType="numberDecimal" />

        <!-- Botão Calcular -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular" />

        <!-- Resultado do Salário -->
        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado do Salário"
            android:textSize="18sp"
            android:paddingTop="16dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>